        <mapping class="ua.prozorro.entity.tenders.ComplaintDTO"/>
        <mapping class="ua.prozorro.entity.tenders.ContractDTO"/>
        <mapping class="ua.prozorro.entity.tenders.DocumentDTO"/>
        <mapping class="ua.prozorro.entity.tenders.FeatureDTO"/>
        <mapping class="ua.prozorro.entity.tenders.FeatureEnumDTO"/>
