        <mapping class="ua.prozorro.entity.tenders.LotDTO"/>
        <mapping class="ua.prozorro.entity.tenders.OrganizationDTO"/>
        <mapping class="ua.prozorro.entity.tenders.QuestionDTO"/>
        <mapping class="ua.prozorro.entity.tenders.UnitDTO"/>

        <mapping class="ua.prozorro.entity.tenders.TenderDTO"/>
        <!--Additional for tender-->
